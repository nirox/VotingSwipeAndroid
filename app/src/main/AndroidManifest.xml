<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mobgen.votingswipe">
    <uses-permission-sdk-23 android:name="android.permission.CAMERA"/>
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
            android:allowBackup="true"
            android:name=".VotingSwipeApplication"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.mobgen.presentation.login.LoginActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.mobgen.presentation.swipe.SwipeActivity"
                android:label="@string/title_activity_swipe"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.mobgen.presentation.register.RegisterActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.mobgen.presentation.detail.DetailActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>